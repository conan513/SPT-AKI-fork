{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            4,
            { "SwitchCase": 1 }
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-undef": "off",
        "no-unused-vars": "off",
        "brace-style": [
            "warn",
            "allman",
            { "allowSingleLine": false }
        ],
        "no-prototype-builtins": "warn",
        "no-constant-condition": "warn",
        "no-trailing-spaces": "warn",
        "keyword-spacing": "warn",
        "space-infix-ops": "warn"
    }
}
